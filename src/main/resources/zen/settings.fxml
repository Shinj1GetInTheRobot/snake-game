<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" spacing="50.0" styleClass="background" xmlns="http://javafx.com/javafx/8.0.171" 
xmlns:fx="http://javafx.com/fxml/1" fx:controller="zen.controllers.SettingsController">
   <Label styleClass="heading" text="Settings" />
   <GridPane alignment="CENTER" hgap="20.0" vgap="0.0">
      <Label styleClass="settingsLabel" text="Tick Speed (ms):" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <Slider fx:id="speedSldr" majorTickUnit="100.0" max="1000" min="10.0" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <Label styleClass="settingsLabel" text="Growth:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
      <Slider fx:id="growthSldr" snapToTicks="true" minorTickCount="0" majorTickUnit="1.0" max="10.0" min="1.0" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </GridPane>
   <HBox spacing="20.0" alignment="CENTER">
      <Button fx:id="playBtn" text="Play"/>
      <Button fx:id="backBtn" text="Back"/>
   </HBox>

   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
</VBox>
