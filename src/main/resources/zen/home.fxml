      <Button fx:id="playBtn" text="Play" styleClass="button"/>
      <Button fx:id="howToPlayBtn" text="How to play?" styleClass="button"/>
      <Button fx:id="settingsBtn" text="Settings" styleClass="button"/>
   </VBox>

   <stylesheets>
      <URL value="@style.css"/>
   </stylesheets>
</VBox>